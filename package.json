{
    "name": "cryptage-app",
    "version": "1.0.0",
    "description": "Application de cryptage sécurisé",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder"
    },
    "author": "Votre Nom",
    "license": "MIT",
    "devDependencies": {
        "electron": "^36.2.0",
        "electron-builder": "^24.13.3",
        "electron-packager": "^17.1.2",
        "electron-rebuild": "^3.2.9"
    },
    "dependencies": {
        "bcrypt": "^5.1.1",
        "better-sqlite3": "^11.10.0",
        "body-parser": "^2.2.0",
        "cors": "^2.8.5",
        "crypto-js": "^4.2.0",
        "dotenv": "^16.5.0",
        "express": "^5.1.0",
        "mongoose": "^8.14.1"
    },
    "build": {
        "appId": "com.votrenom.cryptageapp",
        "productName": "Cryptage App",
        "directories": {
            "output": "dist"
        },
        "files": [
            "**/*"
        ],
        "win": {
            "target": "nsis"
        },
        "nsis": {
            "oneClick": false,
            "perMachine": true,
            "allowToChangeInstallationDirectory": true
        }
    }
}
